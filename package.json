{
  "name": "@readme/openapi-parser",
  "version": "1.2.0",
  "description": "Swagger 2.0 and OpenAPI 3.x parser and validator for Node and browsers",
  "keywords": [
    "swagger",
    "openapi",
    "open-api",
    "json",
    "yaml",
    "parse",
    "parser",
    "validate",
    "validator",
    "validation",
    "spec",
    "specification",
    "schema",
    "reference",
    "dereference"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://apitools.dev/swagger-parser/",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/openapi-parser.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage",
    "coverage": "npm run coverage:node && npm run coverage:browser",
    "coverage:browser": "npm run test:browser -- --coverage",
    "coverage:node": "npm run test -- --coverage",
    "lint": "eslint .",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "test": "npm run test:node && npm run test:typescript",
    "test:browser": "karma start --single-run",
    "test:node": "jest",
    "test:typescript": "tsc --noEmit --strict --lib esnext,dom __tests__/specs/typescript-definition.spec.ts"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.12.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@jsdevtools/host-environment": "^2.1.2",
    "@readme/eslint-config": "^8.0.2",
    "@types/node": "^16.11.0",
    "eslint": "^8.3.0",
    "expect": "^27.4.2",
    "husky": "^7.0.2",
    "jest": "^27.4.3",
    "jest-mock": "^27.4.2",
    "karma": "^6.3.9",
    "karma-jasmine": "^4.0.1",
    "karma-webpack": "^5.0.0",
    "node-fetch": "^2.6.1",
    "openapi-types": "^9.3.0",
    "prettier": "^2.5.0",
    "shx": "^0.3.2",
    "sinon": "^12.0.1",
    "typescript": "^4.4.4",
    "webpack": "^5.65.0"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "github:erunion/json-schema-ref-parser#fix/dates-as-strings",
    "@apidevtools/openapi-schemas": "^2.1.0",
    "@apidevtools/swagger-methods": "^3.0.2",
    "@jsdevtools/ono": "^7.1.3",
    "@readme/better-ajv-errors": "^1.1.0",
    "ajv": "^8.6.3",
    "ajv-draft-04": "^1.0.0",
    "call-me-maybe": "^1.0.1"
  },
  "peerDependencies": {
    "openapi-types": ">=7"
  },
  "prettier": "@readme/eslint-config/prettier",
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.spec.js",
      "<rootDir>/__tests__/**/**/*.spec.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
