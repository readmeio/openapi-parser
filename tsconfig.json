{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,

    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,

    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": [
 "lib/validators/schemas/json-schema.js", "lib/validators/schemas/index.js"  ],
  "exclude": [
    "node_modules"
  ]
}
